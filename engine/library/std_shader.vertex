#version 130

in vec2 vertex_UV;
in vec3 vertex_position;
in vec3 vertex_normal;

uniform mat3 normal_to_view_matrix;
uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

out vec2 uv;
out vec3 normal;
out vec3 view_position;

void main() {
	vec4 view_position4 = view * model * vec4(vertex_position, 1.0);
	gl_Position = projection * view_position4;
	uv = vertex_UV;
	normal = normal_to_view_matrix * vertex_normal;
	view_position = view_position4.xyz;
}
